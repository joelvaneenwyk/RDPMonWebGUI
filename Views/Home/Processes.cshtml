@model HomeViewModel;
@using System.Reflection;

@{
    Layout = "_Empty";
}

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Process</th>
        </tr>
    </thead>
    <tbody>
        @foreach (IModel record in Model.Records)
        {
            <tr>
                @foreach (PropertyInfo info in Model.Properties)
                {
                    <td>@Model.GetValueForRecord(record, info.Name)</td>
                }
            </tr>
        }
    </tbody>
</table>

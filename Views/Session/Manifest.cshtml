@{
    Layout = null;
    string homeLink = Url.RouteUrl("home") + "/";
}
{
    "name": "RDPMon WebGUI",
    "short_name": "RDPMon WebGUI",
    "description": "A WebGUI for RdpMon build in .NET Core.",
    "start_url": "@homeLink",
    "icons": [
        {
            "src": "@(homeLink)img/favicons/android-chrome-192x192.png",
            "sizes": "192x192",
            "type": "image/png"
        },
        {
            "src": "@(homeLink)img/favicons/android-chrome-512x512.png",
            "sizes": "512x512",
            "type": "image/png"
        }
    ],
    "screenshots": [
        {
            "src": "@(homeLink)img/screenshots/connections.png",
            "sizes": "1080x1920",
            "type": "image/png"
        },
        {
            "src": "@(homeLink)img/screenshots/sessions.png",
            "sizes": "1080x1920",
            "type": "image/png"
        }
    ],
    "theme_color": "#4f4f4f",
    "background_color": "#4f4f4f",
    "display": "standalone"
}
